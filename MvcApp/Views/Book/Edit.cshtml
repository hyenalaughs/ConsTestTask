@model MvcApp.Models.Book
@{
    ViewBag.Title = "Редактирование книги";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.ckeditor.com/4.22.1/full/ckeditor.js"></script>

<div class="container mt-4">
    <h2>@(Model.Id == Guid.Empty ? "Добавить книгу" : "Редактировать книгу")</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            @Html.LabelFor(m => m.Title, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Author, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Author)
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.YearPublish, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.YearPublish, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(m => m.YearPublish)
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Genre, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.Label("Оглавление", new { @class = "form-label" })
            @Html.TextAreaFor(m => m.Contents, new { @id = "txtContentsHtml", @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success">Сохранить</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Отмена</a>
    }
</div>

<script>
    CKEDITOR.replace('txtContentsHtml', { height: 300 });
</script>
