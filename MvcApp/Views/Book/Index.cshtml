@model IEnumerable<MvcApp.Models.Book>
@{
    ViewBag.Title = "Список книг";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Список книг</h2>
    <a href="@Url.Action("Edit")" class="btn btn-primary mb-3">Добавить книгу</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Автор</th>
                <th>Год</th>
                <th>Жанр</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.YearPublish</td>
                    <td>@book.Genre</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = book.Id })" class="btn btn-sm btn-warning">Редактировать</a>
                        <a href="@Url.Action("Delete", new { id = book.Id })" class="btn btn-sm btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
